<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
xmlns:l="sap.ui.layout">
    <Dialog title="Signature Pad" contentWidth="550px" contentHeight="300px">
        <content>
            <l:VerticalLayout id="idVLayoutSign" class="sapUiContentPadding"
                width="100%">
                <l:content>

                </l:content>
            </l:VerticalLayout>
        </content>
        <beginButton>
            <Button text="Submit" press="onPressSign" type="Accept"></Button>
        </beginButton>
        <endButton>
            <Button text="Cancel" type="Reject" press="onCancelSignDialog"></Button>
        </endButton>
    </Dialog>

</core:FragmentDefinition>